/**index.wxss**/
@charset "utf-8";
page{
  width: 100%;
  padding: 0;
  margin: 0;
}

.index-show-box-body {
	width: 100%;
	height: 100%;
	background: #C1523E url("https://qqpublic.qpic.cn/qq_public/0/0-3008817774-58118648F871C29B1E892969CA853261/0?fmt=png&size=25&rs=0-0&h=490&w=720&ppv=1") no-repeat;
	background-size: 100%;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box
}

.red-packet-container .top-box .cont-head-portrait {
	margin: 0 auto;
	padding-top: 30rpx;
	width: 100%;
	border-radius: 8px;
	line-height: 0;
	text-align: center
}

.red-packet-container .top-box .cont-head-portrait image {
	width: 160rpx;
	height: 140rpx;
}

.red-packet-container .top-box .cont-desc-blessing {
	margin-top: 30rpx;
	text-align: center
}

.red-packet-container .top-box .cont-desc-blessing > view {
  height: 60rpx;
  line-height: 60rpx;
	font-size: 32rpx;
	color: #FFE7C0;
	vertical-align: middle
}

.red-packet-container .top-box .icon-prompt {
    display: inline-block;
    width: 126rpx;
    height: 52rpx;
    background: url('https://qqpublic.qpic.cn/qq_public/0/0-3114134172-630E65DD819BE7CFA1AEC277C136521C/0?fmt=png&size=0&rs=0-0&h=52&w=126&ppv=1') no-repeat;
    background-size: 100%;
    margin-left: 10rpx;
    vertical-align: middle;
    color: #D85940;
    font-size: 28rpx;
    text-align: center;
    line-height: 52rpx;
}

.red-packet-container .btn-open-red-packet {
	position: absolute;
	width: 220rpx;
	height: 220rpx;
	background: url("https://qqpublic.qpic.cn/qq_public/0/0-2609803129-A7C715F1DEBF38E0563CD5CD221C0680/0?fmt=png&size=15&rs=0-0&h=240&w=240&ppv=1") no-repeat 0 0/100% 100%;
	background-size: 100%;
	top: 380rpx;
	left: 35%;
	text-align: center;
	line-height: 220rpx;
	font-weight: 700;
	color: #000;
	font-size: 80rpx;
	border-radius: 1000px;
}

.red-packet-container .btn-open-red-packet .open{
  display: inline-block;
	animation: open 0.6s linear 3;
}
@keyframes open {
	to {
		transform: rotateY(180deg);
	}

	from {
		transform: rotateY(360deg);
	}
}

.red-packet-container .top-box .cont-desc-bottom {
	font-size: 30rpx;
	color: #F2BD91;
	margin-top: 310rpx;
	text-align: center
}

.red-packet-container .list {
	margin: 40rpx auto;
	width: 90%;
	background: #AF4C3A;
	border-radius: 8px;
	box-sizing: border-box;
	border: 1px solid #AB4F3F;
  height: 720rpx;
}
.red-packet-container .list .list-item {
  height: 120rpx;
  overflow: hidden;
}

.red-packet-container .list .list-item > view{
	display: -webkit-box;
	-webkit-box-orient: horizontal;
	-webkit-box-pack: justify;
	-webkit-box-align: center;
	width: 100%;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
  overflow: hidden;
  height: 120rpx;
}

.red-packet-container .list .list-item .left-first{
  position: relative;
  left: 0;
  bottom: -120rpx;
  animation:mymove 3s infinite;
}
@-webkit-keyframes mymove {
	from {
		bottom: -120rpx;
	}

	to {
		bottom: 0;
	}
}

.red-packet-container .list-item-left image {
	width: 90rpx;
	height: 90rpx;
	border-radius: 1000px;
  float: left;
}

.red-packet-container .list-item-left .item-info {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-box-align: center;
	-webkit-box-pack: center;
	padding-left: 20rpx;
	overflow: hidden;
  max-width: 300rpx;
}

.red-packet-container .list-item-left .item-info-name {
	font-size: 28rpx;
	width: 100%;
	color: #fff
}

.red-packet-container .list-item-left .item-info-time {
	width: 100%;
	font-size: 28rpx;
	color: #fff
}

.red-packet-container .list-item-right {
	font-size: 28rpx;
	text-align: right;
	color: #fff;
}

.red-packet-container .list-item-right text {
	color: #F4D597
}



